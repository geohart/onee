extends layout

block scripts

block content

	div(class='text-center')
		h1 Welcome to ONEE!

		h4 ONEE helps women help women: have your girlfriend's back without intruding.

	div
		form(id='signup', action='/account/create', method='POST')
			h3 Create an account:
			div(class='form-group')
				label(for='name') Enter your name:
				input(type='text', id='name', class='form-control', name='name', placeholder='Name')
			div(class='form-group')
				label(for='email') Enter your email address:
				input(type='text', id='email', class='form-control', name='email', placeholder='Email Address')
			div(class='form-group')
				label(for='phone') Enter your phone number:
				input(type='text', id='phone', class='form-control', name='phone', placeholder='Phone Number')
			div(class='form-group')
				label(for='pwd') Enter your password:
				input(type='password', id='pwd', class='form-control', name='pwd', placeholder='Password')
			div(class='form-group')
				label(for='cpwd') Confirm your password:
				input(type='password', id='cpwd', class='form-control', name='cpwd', placeholder='Confirm Password')
			button(class='btn btn-primary btn-block', type='submit', name='go') Sign Up!